{
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": false,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "quoteProps": "consistent",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.{js,jsx,ts,tsx,css}",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "mdx"
      }
    }
  ]
}
