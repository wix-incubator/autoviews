# EditorConfig
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.{js,jsx,ts,tsx,css}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Configs
[.*rc,*.{json,yml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.html]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
